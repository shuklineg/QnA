p Links:
ul.links
  - links.each do |link|
    li id="link-#{link.id}"
      -if link.gist?
        -link.gist.each do |file|
          p= file[:name]
          code= file[:content]
      -else
        =link_to link.name, link.url
      -if current_user&.author_of?(link.linkable)
        =link_to 'Remove link', link, method: :delete, remote: true
